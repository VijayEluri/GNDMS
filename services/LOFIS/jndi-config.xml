<?xml version="1.0" encoding="UTF-8"?>
<jndiConfig xmlns="http://wsrf.globus.org/jndi/config">
  <service name="SERVICE-INSTANCE-PREFIX/LofiSet">
    <resource name="configuration" type="de.zib.gndms.lofis.lofiset.service.globus.resource.LofiSetResourceConfiguration">
      <resourceParams>
        <parameter>
          <name>factory</name>
          <value>org.globus.wsrf.jndi.BeanFactory</value>
        </parameter>
        <parameter>
          <name>performRegistration</name>
          <!-- Set this to false to skip ServiceGroup registration -->
          <value>PERFORM_REGISTRATION</value>
        </parameter>
        <parameter>
          <name>registrationTemplateFile</name>
          <!-- Set this to the relative path (from the container root, e.g GLOBUS_LOCATION for globus container) of the registration parameters template file (ignored if performRegistration is false) -->
          <value>ETC-PATH/LofiSet_registration.xml</value>
        </parameter>
      </resourceParams>
    </resource>
    <resource name="home" type="de.zib.gndms.lofis.lofiset.service.globus.resource.ExtLofiSetResourceHome">
      <resourceParams>
        <parameter>
          <name>factory</name>
          <value>org.globus.wsrf.jndi.BeanFactory</value>
        </parameter>
        <parameter>
          <name>resourceClass</name>
          <value>de.zib.gndms.lofis.lofiset.service.globus.resource.LofiSetResource</value>
        </parameter>
        <parameter>
          <name>resourceKeyName</name>
          <value>{http://lofis.gndms.zib.de/LOFIS/LofiSet}LofiSetKey</value>
        </parameter>
        <parameter>
          <name>resourceKeyType</name>
          <value>java.lang.String</value>
        </parameter>
      </resourceParams>
    </resource>
    <resourceLink name="serviceconfiguration" target="java:comp/env/services/SERVICE-INSTANCE-PREFIX/LOFIS/serviceconfiguration" />
    <resourceLink name="lOFISHome" target="java:comp/env/services/SERVICE-INSTANCE-PREFIX/LOFIS/home" />
  </service>
  <service name="SERVICE-INSTANCE-PREFIX/LOFIS">
    <resource name="configuration" type="de.zib.gndms.lofis.service.globus.resource.LOFISResourceConfiguration">
      <resourceParams>
        <parameter>
          <name>factory</name>
          <value>org.globus.wsrf.jndi.BeanFactory</value>
        </parameter>
        <parameter>
          <name>performRegistration</name>
          <!-- Set this to false to skip ServiceGroup registration -->
          <value>PERFORM_REGISTRATION</value>
        </parameter>
        <parameter>
          <name>registrationTemplateFile</name>
          <!-- Set this to the relative path (from the container root, e.g GLOBUS_LOCATION for globus container) of the registration parameters template file (ignored if performRegistration is false) -->
          <value>ETC-PATH/LOFIS_registration.xml</value>
        </parameter>
      </resourceParams>
    </resource>
    <resource name="serviceconfiguration" type="de.zib.gndms.lofis.service.LOFISConfiguration">
      <resourceParams>
        <parameter>
          <name>factory</name>
          <value>org.globus.wsrf.jndi.BeanFactory</value>
        </parameter>
        <parameter>
          <name>etcDirectoryPath</name>
          <value>ETC-PATH</value>
        </parameter>
        <parameter>
          <name>gridJNDIEnv</name>
          <value>@gridJNDIEnv@</value>
        </parameter>
        <parameter>
          <name>gridName</name>
          <value>@gridName@</value>
        </parameter>
        <parameter>
          <name>gridPath</name>
          <value>ETC-PATH/@gridPath@</value>
        </parameter>
      </resourceParams>
    </resource>
    <resource name="home" type="de.zib.gndms.lofis.service.globus.resource.ExtLOFISResourceHome">
      <resourceParams>
        <parameter>
          <name>factory</name>
          <value>org.globus.wsrf.jndi.BeanFactory</value>
        </parameter>
      </resourceParams>
    </resource>
    <resourceLink name="lofiSetHome" target="java:comp/env/services/SERVICE-INSTANCE-PREFIX/LofiSet/home" />
  </service>
</jndiConfig>

