<?xml version="1.0" encoding="UTF-8"?>
<securityConfig xmlns="http://www.globus.org">
  <method name="queryResourceProperties">
    <auth-method>
      <none />
    </auth-method>
  </method>
  <method name="getMultipleResourceProperties">
    <auth-method>
      <none />
    </auth-method>
  </method>
  <method name="getResourceProperty">
    <auth-method>
      <none />
    </auth-method>
  </method>
  <method name="getServiceSecurityMetadata">
    <auth-method>
      <none />
    </auth-method>
  </method>
  <method name="permitEstimateAndDestroyRequest">
    <auth-method>
    <GSITransport>
      <protection-level>
        <privacy />
      </protection-level>
    </GSITransport>
    </auth-method>
    <run-as> 
    	<caller-identity/>
    </run-as> 
  </method>
  <method name="getOfferAndDestroyRequest">
    <auth-method>
    <GSITransport>
      <protection-level>
        <privacy />
      </protection-level>
    </GSITransport>
    </auth-method>
    <run-as> 
    	<caller-identity/>
    </run-as> 
  </method>
  <authz value="gridmap" />
  <gridmap value="etc/c3grid_shared/grid-mapfile" />
</securityConfig>


