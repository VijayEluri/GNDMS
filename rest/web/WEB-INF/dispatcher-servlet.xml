<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
               http://www.springframework.org/schema/context
               http://www.springframework.org/schema/context/spring-context-2.5.xsd
               http://www.springframework.org/schema/oxm 
               http://www.springframework.org/schema/oxm/spring-oxm-3.0.xsd">

    <context:component-scan base-package="de.zib.firstrest"/>

    <bean class="org.springframework.web.servlet.view.BeanNameViewResolver"/>

    <bean id="dao" class="de.zib.firstrest.repository.FooDaoMockup">
          <property name="muchFoo">
           <map>
               <entry key="1" value-ref="foo1"/>
               <entry key="2" value-ref="foo2"/>
               <entry key="42" value-ref="foo42" />
           </map>
        </property>
    </bean>

    <!-- this is the marshaller -->
    <bean id="marshaller" class="org.springframework.oxm.xstream.XStreamMarshaller">
        <property name="autodetectAnnotations" value="true"/>
    </bean>

    <!-- this is the converter for POST -->
    <bean id="converter"
		class="org.springframework.http.converter.xml.MarshallingHttpMessageConverter">
		<constructor-arg ref="marshaller" />
	</bean>

     <bean class="org.springframework.web.servlet.mvc.annotation.AnnotationMethodHandlerAdapter">
		<property name="messageConverters">
			<list>
				<ref bean="converter" />
			</list>
		</property>
     </bean>

    <!-- this are some test values -->
    <bean id="foo1" class="de.zib.firstrest.domain.Foo"  >
        <property name="id" value="1"/>
        <property name="value" value="bar"/>
    </bean>
    <bean id="foo2" class="de.zib.firstrest.domain.Foo"  >
        <property name="id" value="2"/>
        <property name="value" value="barz"/>
    </bean>
    <bean id="foo42" class="de.zib.firstrest.domain.Foo"  >
        <property name="id" value="42"/>
        <property name="value" value="theAnswer"/>
    </bean>

    <bean class="org.springframework.web.servlet.view.ContentNegotiatingViewResolver">
        <property name="mediaTypes">
            <map>
                <entry key="xml" value="application/xml"/>
                <entry key="html" value="text/html"/>
            </map>
        </property>
        <property name="viewResolvers">
            <list>
                <bean ref="testXmlView"/>
                <bean class="org.springframework.web.servlet.view.UrlBasedViewResolver">
                    <property name="viewClass" value= "org.springframework.web.servlet.view.JstlView"/>
                    <property name="prefix" value="/WEB-INF/jsp/"/>
                    <property name="suffix" value=".jsp"/>
                </bean>
            </list>
        </property>
    </bean>
    <!-- this is view converter for GET -->
    <bean id="testXmlView" class="org.springframework.web.servlet.view.xml.MarshallingView">
        <constructor-arg ref="marshaller">
        </constructor-arg>
    </bean>

</beans>
