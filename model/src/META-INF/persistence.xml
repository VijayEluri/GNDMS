<?xml version="1.0"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd"
    version="1.0">
    <persistence-unit name="c3grid">
	    <properties>
		    <property name="openjpa.Id" value="gndms-shared-model" />
		    <property name="openjpa.ConnectionDriverName" value="org.apache.derby.jdbc.EmbeddedDriver" />
		    <property name="openjpa.jdbc.DBDictionary" value="derby(JoinSyntax=sql92)" />
		    <property name="openjpa.slice.ConnectionRetainMode" value="on-demand" />
		    <property name="openjpa.jdbc.SynchronizeMappings" value="buildSchema(ForeignKeys=true)" />
		    <property name="openjpa.jdbc.TransactionIsolation" value="serializable" />
		    <property name="openjpa.MetaDataFactory" value="jpa(Types=de.zib.gndms.model.dspace.Subspace;de.zib.gndms.model.dspace.StorageSize;de.zib.gndms.model.common.VEPRef;de.zib.gndms.model.common.SimpleRKVEPRef;de.zib.gndms.model.common.GridSite;de.zib.gndms.model.dspace.DSpaceVEPRef;de.zib.gndms.model.common.GridResource;de.zib.gndms.model.common.GridEntity;de.zib.gndms.model.common.VEPRefId;de.zib.gndms.model.common.SimpleRKVEPRefId;de.zib.gndms.model.dspace.DSpaceVEPRefId)" />
	    </properties>
	</persistence-unit>
</persistence>